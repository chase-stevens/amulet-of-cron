<%= content_for :title, "Doodads ##{@doodad.id}" %>
<%= turbo_stream_from @doodad %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Doodads", doodads_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Doodad #<%= @doodad.id %>
    </h1>
    <%= link_to t("edit"), edit_doodad_path(@doodad), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @doodad %>
  </div>
</div>
