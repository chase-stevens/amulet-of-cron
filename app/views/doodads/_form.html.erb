<%= form_with(model: doodad) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), doodads_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), doodad_path(@doodad), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
