<%= content_for :title, "Cron Monitors ##{@cron_monitor.id}" %>
<%= turbo_stream_from @cron_monitor %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Cron Monitors", cron_monitors_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= @cron_monitor.title %>
    </h1>
    <%= link_to t("edit"), edit_cron_monitor_path(@cron_monitor), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @cron_monitor %>
  </div>
</div>
