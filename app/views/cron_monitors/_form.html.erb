<%= form_with(model: cron_monitor) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control max-w-sm" %>
  </div>

  <div class="form-group  max-w-sm">
    <%= form.label :interval %>
    <%= form.select :interval, interval_select_options, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_field :notes, class: "form-control w-full max-w-sm" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), cron_monitors_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), cron_monitor_path(@cron_monitor), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
