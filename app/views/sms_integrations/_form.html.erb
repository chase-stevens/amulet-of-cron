<%= form_with(model: sms_integration) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), sms_integrations_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), sms_integration_path(@sms_integration), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
