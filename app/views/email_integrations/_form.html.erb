<%= form_with(model: email_integration) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), integrations_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), email_integration_path(@email_integration), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
