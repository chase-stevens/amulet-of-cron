<%= form_with(model: slack_integration) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :channel %>
    <%= form.text_field :channel, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), integrations_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), slack_integration_path(@slack_integration), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
