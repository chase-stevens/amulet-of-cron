<%= content_for :title, "Slack Integrations ##{@slack_integration.id}" %>
<%= turbo_stream_from @slack_integration %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Slack Integrations", slack_integrations_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Slack Integration #<%= @slack_integration.id %>
    </h1>
    <%= link_to t("edit"), edit_slack_integration_path(@slack_integration), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @slack_integration %>
  </div>
</div>
